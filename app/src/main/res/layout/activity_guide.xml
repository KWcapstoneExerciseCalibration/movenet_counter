<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/img_backward"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/backward"
        android:scaleType="fitCenter"
        android:backgroundTint="@android:color/transparent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ivExercise"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginStart="72dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="22dp"
        android:src="@drawable/squat"
        app:layout_constraintBottom_toTopOf="@+id/numPick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:text="스쿼트"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvExercise2"
        app:layout_constraintEnd_toStartOf="@+id/numPick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvExercise2" />

    <TextView
        android:id="@+id/tvExercise2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="409dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="125dp"
        android:gravity="center"
        android:text="회"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/numPick"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/numPick"
        android:layout_width="106dp"
        android:layout_height="206dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="41dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/tvExercise2"
        app:layout_constraintStart_toEndOf="@+id/tvExercise"
        app:layout_constraintTop_toBottomOf="@+id/ivExercise" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="108dp"
        android:gravity="center"
        android:text="카메라를 정면으로 놔주세요."
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvExercise2" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="102dp"
        android:layout_height="65dp"
        android:layout_marginBottom="16dp"
        android:text="시작하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/tvExerciseNum"
        android:layout_width="91dp"
        android:layout_height="62dp"
        android:gravity="center"
        android:text="10"
        android:textSize="40sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/tvExercise2"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toEndOf="@+id/tvExercise"
        app:layout_constraintTop_toBottomOf="@+id/ivExercise"
        app:layout_constraintVertical_bias="0.442" />
</androidx.constraintlayout.widget.ConstraintLayout>