<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivExercise"
        android:layout_width="313dp"
        android:layout_height="373dp"
        android:layout_gravity="center"
        android:layout_marginStart="71dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/squat"
        app:layout_constraintBottom_toTopOf="@+id/tvExercise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvExercise"
        android:layout_width="243dp"
        android:layout_height="78dp"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="86dp"
        android:gravity="center"
        android:text="스쿼트"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/ivExercise"
        app:layout_constraintTop_toBottomOf="@+id/ivExercise" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="319dp"
        android:layout_height="45dp"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="11dp"
        android:text="카메라를 정면으로 놔주세요."
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_start"
        app:layout_constraintEnd_toEndOf="@+id/tvExercise"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toStartOf="@+id/ivExercise"
        app:layout_constraintTop_toBottomOf="@+id/tvExercise" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="109dp"
        android:layout_height="70dp"
        android:layout_marginStart="132dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="16dp"
        android:text="시작하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.215"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />
</androidx.constraintlayout.widget.ConstraintLayout>